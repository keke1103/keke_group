<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/set"
            android:gravity="center"
            android:textSize="22sp"/>
        <ImageView
            android:id="@+id/iv_back" 
            android:layout_width="18dp"
            android:layout_height="20dp"
            android:layout_margin="20dp"
            android:background="@drawable/rub_course_back_icon"
            android:contentDescription="@drawable/rub_course_back_icon"/>
           
    </RelativeLayout>
      <View 
             android:layout_width="match_parent"
             android:layout_height="10dp"
             android:background="@color/huise"/>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="60dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/aboutus"
        android:textSize="22sp"
        android:layout_marginLeft="30dp"
        android:gravity="center_vertical"
        />
    <ImageView 
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/rub_course_go_to_next_right"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"/>
          </RelativeLayout>
           <View 
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="@color/huise"/> 
          <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="60dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/wipecache"
        android:textSize="22sp"
        android:layout_marginLeft="30dp"
        android:gravity="center_vertical"
        />
    <ImageView 
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/rub_course_go_to_next_right"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"/>
          </RelativeLayout> 
          <Button 
      android:id="@+id/btn_exitaccount"
      android:layout_width="220dp"
      android:layout_height="37dp"
      android:background="@drawable/login_selector_btn"
      android:layout_gravity="center_horizontal"
      android:text="@string/exitaccount"
      android:layout_marginTop="10dp"/>
 
   

</LinearLayout>
 
