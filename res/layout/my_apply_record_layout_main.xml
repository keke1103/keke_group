<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/my_apply_record_layout_image"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="#eeeeee" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_weight="2"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/my_apply_record_layout_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="汉昌IT岗前实训中心"
                android:textColor="@color/other_text_gray"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yu"
                    android:textColor="@color/main_text_gray"
                    android:textSize="11sp" />

                <TextView
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:id="@+id/my_apply_record_layout_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/one"
                    android:textColor="@color/main_orange"
                    android:textSize="11sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tian"
                    android:textColor="@color/main_text_gray"
                    android:textSize="11sp" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/my_apply_record_layout_text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="二胡八段干货讲座"
            android:textColor="@color/title1_color_black"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/my_apply_record_layout_text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02-01 上午 9:00"
                android:textColor="@color/other_text_gray"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/my_apply_record_layout_text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:text="未受理"
                android:textColor="@color/main_red"
                android:textSize="11sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>