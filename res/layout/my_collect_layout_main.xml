<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    <ImageView 
        android:id="@+id/my_collect_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_weight="1"
        android:src="@drawable/ic_launcher"/>
   <LinearLayout 
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:layout_weight="2"
       android:orientation="vertical">
       <TextView 
           android:id="@+id/my_collect_text1"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="二胡十段兴趣班"/>
       <TextView 
           android:id="@+id/my_collect_text2"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="已报1人     渝中汉昌"/>
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView 
               android:id="@+id/my_collect_text3"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="乐器"/>
           <TextView 
               android:id="@+id/my_collect_text4"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_toRightOf="@+id/my_collect_text3"
               android:layout_marginLeft="3dp"
               android:text="小学"/>
           <TextView 
               android:id="@+id/my_collect_text5"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:layout_marginRight="5dp"
               android:text="余1天"/>
       </RelativeLayout>
   </LinearLayout>
</LinearLayout>
