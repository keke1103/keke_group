<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud_color"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="15dp" >

        <ImageView
            android:id="@+id/image_setting_up_return"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:contentDescription="@drawable/rub_course_back_icon"
            android:src="@drawable/rub_course_back_icon" />

        <TextView
            android:id="@+id/text_setting_up_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/setting_up"
            android:textSize="17sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="7dp"
        android:background="@color/backgroud_color" />

    <RelativeLayout
        android:id="@+id/layout_setting_up_about_us"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white" >

        <TextView
            android:id="@+id/text_setting_up_about_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/about_us"
            android:padding="15dp"
            android:textColor="@color/main_text_gray_and_black" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@drawable/rub_course_go_to_next_right"
            android:padding="10dp"
            android:src="@drawable/rub_course_go_to_next_right" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/backgroud_color" />

    <RelativeLayout
        android:id="@+id/layout_setting_up_cache"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white" >

        <TextView
            android:id="@+id/text_setting_up_clear_the_cache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/clear_the_cache"
            android:padding="15dp"
            android:textColor="@color/main_text_gray_and_black" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@drawable/rub_course_go_to_next_right"
            android:padding="10dp"
            android:src="@drawable/rub_course_go_to_next_right" />

        <TextView
            android:id="@+id/test_setting_up_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/text_setting_up_clear_the_cache"
            android:layout_alignBottom="@+id/text_setting_up_clear_the_cache"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/imageView1"
            android:layout_toStartOf="@+id/imageView1"
            android:text="@string/setting_up_data"
            android:textColor="@color/other_text_gray"
            android:textSize="12sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/button_setting_up_returnAccount"
        android:layout_width="fill_parent"
        android:layout_height="33dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_rounded_corners_and_s"
        android:text="@string/withdraw_from_the_account"
        android:textColor="@color/auxiliary_color_orange"
        android:textSize="13sp" />

</LinearLayout>